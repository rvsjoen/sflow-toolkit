#!/bin/sh
#
# chkconfig: 2345 56 01
# description: Starts and stops the sFlow collector daemon
#
# pidfile: /var/run/$DAEMON.pid
# config:  /etc/$DAEMON.conf

ARGS=" -f 10 -p 6343 -i 10.146.45.25 -o /tmp/sflow -v -b 10 -s 2500"
DAEMON=stcollectd
DAEMONXML=stxmlrpcd
ARGSXML=""
DAEMON_HOME=/usr/local/bin
SERVICE="sFlow collecting"
SERVICEXML="sFlow XMLRPC"

# Source function library.
if [ -f /etc/init.d/functions ] ; then
  . /etc/init.d/functions
elif [ -f /etc/rc.d/init.d/functions ] ; then
  . /etc/rc.d/init.d/functions
else
  exit 1
fi

# Avoid using root's TMPDIR
unset TMPDIR

[ -f /etc/$DAEMON.conf ] || exit 6

RETVAL=0
RETVALXML=0

start() {
	echo -n $"Starting $SERVICE services: "
	daemon /usr/local/bin/$DAEMON $ARGS
	RETVAL=$?
	echo
	[ $RETVAL -eq 0 ] && touch /var/lock/subsys/$DAEMON || RETVAL=1
	echo -n $"Starting $SERVICEXML services: "
	daemon /usr/local/bin/$DAEMONXML $ARGSXML
	RETVALXML=$?
	echo
	[ $RETVALXML -eq 0 ] && touch /var/lock/subsys/$DAEMONXML || RETVALXML=1
	return  $RETVAL
}	

stop() {
	echo -n $"Shutting down $SERVICE services: "
	killproc $DAEMON
	RETVAL=$?
	echo
	[ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/$DAEMON

	echo -n $"Shutting down $SERVICEXML services: "
	killproc $DAEMONXML
	RETVALXML=$?
	echo
	[ $RETVALXML -eq 0 ] && rm -f /var/lock/subsys/$DAEMONXML
	return $RETVAL
}	

restart() {
	stop
	start
}	

